# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=syncsphere
DB_USER=postgres
DB_PASSWORD=password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=2000

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=syncsphere:

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# ==============================================
# STRIPE PAYMENT CONFIGURATION
# ==============================================
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_SUCCESS_URL=http://localhost:3000/subscription/success
STRIPE_CANCEL_URL=http://localhost:3000/subscription/cancel

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@syncsphere.com
EMAIL_FROM_NAME=SyncSphere

# ==============================================
# FILE UPLOAD CONFIGURATION
# ==============================================
UPLOAD_PATH=./uploads
TEMP_UPLOAD_PATH=./uploads/temp
RECOVERY_UPLOAD_PATH=./uploads/recovery
TRANSFER_UPLOAD_PATH=./uploads/transfers
BACKUP_UPLOAD_PATH=./uploads/backups
MAX_FILE_SIZE=50MB
MAX_FILES_PER_UPLOAD=10
ALLOWED_FILE_TYPES=image/*,video/*,audio/*,application/pdf,text/*,application/zip

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
PASSWORD_RESET_EXPIRE=3600000
EMAIL_VERIFICATION_EXPIRE=86400000
FILE_DOWNLOAD_TOKEN_EXPIRE=3600

# ==============================================
# ANALYTICS CONFIGURATION
# ==============================================
ANALYTICS_RETENTION_DAYS=365
METRICS_COLLECTION_INTERVAL=300000
REAL_TIME_METRICS_TTL=3600

# ==============================================
# BACKUP CONFIGURATION
# ==============================================
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_SCHEDULE_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *
FULL_BACKUP_SCHEDULE=0 3 * * 0
CLEANUP_SCHEDULE=0 4 * * *

# ==============================================
# NOTIFICATION CONFIGURATION
# ==============================================
NOTIFICATION_QUEUE_SIZE=1000
EMAIL_QUEUE_CONCURRENCY=5
PUSH_NOTIFICATION_ENABLED=false

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_MAX_FILES=5

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_PASSWORD_RESET=true
FEATURE_PHONE_TRANSFER=true
FEATURE_DATA_RECOVERY=true
FEATURE_SUBSCRIPTIONS=true
FEATURE_ANALYTICS=true
FEATURE_BACKUPS=true
FEATURE_NOTIFICATIONS=true
FEATURE_FILE_UPLOADS=true
FEATURE_ADMIN_PANEL=true

# ==============================================
# EXTERNAL APIS
# ==============================================
ADB_PATH=/usr/bin/adb
ITUNES_PATH=/usr/bin/itunes

# ==============================================
# MONITORING
# ==============================================
SENTRY_DSN=your-sentry-dsn
PROMETHEUS_PORT=9090